                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="60"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Ellipse x:Name="contactEllipse2" Grid.Column="0" Height="30" Width="30" Fill="Cyan"/>
                            <TextBlock x:Name="contactName2" Text="Contact Name 2" FontSize="18" Grid.Column="1" VerticalAlignment="Center" Margin="10, 0, 0, 0"/>
                        </Grid>
                    </ToggleButton>
                    <ToggleButton x:Name="btnContact3" Background="{x:Null}" Height="60" BorderThickness="0, 0, 0, 1" BorderBrush="LightGray" HorizontalContentAlignment="Left" Click="btnContact3_Click">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="60"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Ellipse x:Name="contactEllipse3" Grid.Column="0" Height="30" Width="30" Fill="Green"/>
                            <TextBlock x:Name="contactName3" Text="Contact Name 3" FontSize="18" Grid.Column="1" VerticalAlignment="Center" Margin="10, 0, 0, 0"/>
                        </Grid>
                    </ToggleButton>
                    <ToggleButton x:Name="btnContact4" Background="{x:Null}" Height="60" BorderThickness="0, 0, 0, 1" BorderBrush="LightGray" HorizontalContentAlignment="Left" Click="btnContact4_Click">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="60"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Ellipse x:Name="contactEllipse4" Grid.Column="0" Height="30" Width="30" Fill="Red"/>
                            <TextBlock x:Name="contactName4" Text="Contact Name 4" FontSize="18" Grid.Column="1" VerticalAlignment="Center" Margin="10, 0, 0, 0"/>
                        </Grid>
                    </ToggleButton>
                    <ToggleButton x:Name="btnContact5" Background="{x:Null}" Height="60" BorderThickness="0, 0, 0, 1" BorderBrush="LightGray" HorizontalContentAlignment="Left" Click="btnContact5_Click">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="60"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Ellipse x:Name="contactEllipse5" Grid.Column="0" Height="30" Width="30" Fill="Turquoise"/>
                            <TextBlock x:Name="contactName5" Text="Contact Name 5" FontSize="18" Grid.Column="1" VerticalAlignment="Center" Margin="10, 0, 0, 0"/>
                        </Grid>
                    </ToggleButton>
                    <ToggleButton x:Name="btnContact6" Background="{x:Null}" Height="60" BorderThickness="0, 0, 0, 1" BorderBrush="LightGray" HorizontalContentAlignment="Left" Click="btnContact6_Click">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="60"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Ellipse x:Name="contactEllipse6" Grid.Column="0" Height="30" Width="30" Fill="Orange"/>
                            <TextBlock x:Name="contactName6" Text="Contact Name 6" FontSize="18" Grid.Column="1" VerticalAlignment="Center" Margin="10, 0, 0, 0"/>
