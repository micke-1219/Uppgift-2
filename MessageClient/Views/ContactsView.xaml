                    </ToggleButton>
                    <ToggleButton x:Name="btnContact9" Background="{x:Null}" Height="60" BorderThickness="0, 0, 0, 1" BorderBrush="LightGray" HorizontalContentAlignment="Left" Click="btnContact9_Click">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="60"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Ellipse x:Name="contactEllipse9" Grid.Column="0" Height="30" Width="30" Fill="Gold"/>
                            <TextBlock x:Name="contactName9" Text="Contact Name 9" FontSize="18" Grid.Column="1" VerticalAlignment="Center" Margin="10, 0, 0, 0"/>
                        </Grid>
                    </ToggleButton>
                    <ToggleButton x:Name="btnContact10" Background="{x:Null}" Height="60" BorderThickness="0, 0, 0, 1" BorderBrush="LightGray" HorizontalContentAlignment="Left" Click="btnContact10_Click">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="60"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Ellipse x:Name="contactEllipse10" Grid.Column="0" Height="30" Width="30" Fill="Blue"/>
                            <TextBlock x:Name="contactName10" Text="Contact Name 10" FontSize="18" Grid.Column="1" VerticalAlignment="Center" Margin="10, 0, 0, 0"/>
                        </Grid>
                    </ToggleButton>
                </StackPanel>
            </ScrollViewer>
        </Grid>
        <Grid x:Name="detailedViewContacts" Grid.Column="1">
            <StackPanel>
                <Ellipse x:Name="ellipse" Height="100" Width="100" Margin="0, 20, 0, 0"/>
                <TextBlock x:Name="name" FontSize="14" HorizontalAlignment="Center" Margin="0, 10, 0, 0"/>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
